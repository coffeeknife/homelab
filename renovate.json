{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "description": "Automerge patch updates",
      "matchUpdateTypes": ["patch", "digest"],
      "automerge": true
    },
    {
      "description": "Require approval for minor updates",
      "matchUpdateTypes": ["minor"],
      "automerge": false
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Helm values with image.repository and image.tag on separate lines",
      "fileMatch": ["values.*\\.yaml$"],
      "matchStrings": [
        "image:\\s*\\n\\s*repository:\\s*(?<depName>[^\\s]+)\\s*\\n\\s*tag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
